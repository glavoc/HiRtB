<Window x:Class="HiRtB.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="300" Width="484.874">
    <Grid>
        <ListView Margin="10,10,155,10" Name="lvPropLine">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Property Line ID" Width="120" DisplayMemberBinding="{Binding PropID}" />
                    <GridViewColumn Header="to North" Width="60" DisplayMemberBinding="{Binding OrientToN}" />
                    <GridViewColumn Header="Vertical Offset" Width="150" DisplayMemberBinding="{Binding VerOffset }" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="button" Content="Button" Margin="0,219,32,0" HorizontalAlignment="Right" Width="77" Height="22" VerticalAlignment="Top"/>
        <Grid HorizontalAlignment="Left" Height="250" Margin="327,10,0,0" VerticalAlignment="Top" Width="140"/>
    </Grid>
</Window>
